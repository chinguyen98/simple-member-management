<h1 class="text-center">Register</h1>
<h4 class="text-center">Please enter your info</h4>
<div class="text-center col-lg-6 mx-auto pt-5">

    {{#if errors}}
    {{#each errors}}
    <div class="bg-danger p-2 m-2">
        <p class="text-white">{{this}}</p>
    </div>
    {{/each}}
    {{/if}}

    <form action="/register" method="post">
        <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" id="name" value="{{value.name}}">
        </div>
        <div class="form-group">
            <label for="username">Username</label>
            <input class="form-control" type="text" name="username" id="username" value="{{value.username}}">
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input class="form-control" type="password" name="password" id="password" value="{{value.password}}">
        </div>
        <div class="form-group">
            <label for="confirmPassword">Confirm Password</label>
            <input class="form-control" type="password" name="confirmPassword" id="confirmPassword"
                value="{{value.confirmPassword}}">
        </div>
        <input class="btn btn-primary" type="submit" value="Register">
    </form>
</div>